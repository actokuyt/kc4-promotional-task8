name: Terraform AWS Provisioning

on:
  push:
    branches:
      - master

jobs:
  terraform:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Terraform
      uses: hashicorp/setup-terraform@v2
      with:
        terraform_version: 1.5.0 

    - name: Configure AWS credentials
      uses: aws-actions/configure-aws-credentials@v2
      with:
        aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
        aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
        aws-region: eu-west-1 
        
    - name: Write SSH private key to file
      run: |
        echo "${{ secrets.SSH_KEY }}" > private_key.pem
        chmod 600 private_key.pem
      working-directory: terraform
    
    - name: Terraform Init
      run: terraform init
      working-directory: terraform
  
    - name: Terraform Apply
      run: terraform apply -auto-approve -var="private_key_path=private_key.pem"
      working-directory: terraform

    - name: Capture EC2 Public IP
      id: ec2_output
      run: echo $(terraform output -raw ec2_public_ip) >> ec2ip.txt
      working-directory: terraform

    - name: Save EC2 Public IP as artifact
      uses: actions/upload-artifact@v3
      with:
        # name: ec2-public-ip
        path: terraform/ec2ip.txt